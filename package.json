{
  "name": "design-system",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "js": "rollup -c",
    "html": "npx @11ty/eleventy",
    "icons": "node scripts/iconsTemplate",
    "watch:icons": "onchange -i \"src/webcomponents/atoms/icons/svg/*.svg\" -- npm run icons",
    "start": "concurrently --kill-others \"npm run watch:icons\" \"npm run js -- --watch\" \"npm run html -- --serve\"",
    "build": "npm run icons && npm run js && npm run html"
  },
  "keywords": [],
  "author": "Samuel Gomez",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "1.0.1",
    "chalk": "5.0.1",
    "find": "0.3.0",
    "fs-extra": "10.1.0",
    "onchange": "7.1.0",
    "path": "^0.12.7"
  },
  "dependencies": {
    "@babel/core": "7.17.9",
    "@rollup/plugin-babel": "5.3.1",
    "@rollup/plugin-node-resolve": "14.1.0",
    "concurrently": "7.1.0",
    "html-minifier": "4.0.0",
    "rollup": "2.70.2",
    "rollup-plugin-html": "0.2.1",
    "rollup-plugin-styles": "4.0.0",
    "rollup-plugin-terser": "7.0.2"
  }
}
